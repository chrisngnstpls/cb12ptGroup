<div class="jquery-script-clear"></div>
<div class="container">
    <div id="picker"></div>
    <div>
        <div class="formselect">
            <form method="POST">

                <p>Selected slot:</p>
                <input type="text" name="startDate" id="selected-dates">
                <p>Select Location:</p>

                <input list="locationlist" id="location" name="location" />

                <select id="locationlist">
                    <option value="Center Athens">Center Athens</option>
                    <option value="North Suburbs">North Suburbs</option>
                    <option value="Southside">Southside</option>
                    <option value="East Coast">East Coast</option>
                    <option value="West Districts">West Districts</option>
                </select>
                <input type="hidden" name="isCancelled" value="true">
                <div class="errorText" id="error">
                    <%= errorList.error %>
                </div>
                <button type="submit" id="bookbtn">Book session</button>
            </form>
        </div>
    </div>
</div>
