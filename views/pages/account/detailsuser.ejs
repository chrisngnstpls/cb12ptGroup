<!-- HEADER -->
<header id="main-header" class="py-3 bg-dark text-white mb-4">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1>
                    <i class="fas fa-user mr-4"></i>Your account
                </h1>
            </div>
            <div class="d-flex flex-row justify-content-end flex-around tit mt-2">
                <div class="col-md-1 ml-1">
                    <a href="/"><button type="submit" class="btn btn-primary">Home</button></a>
                </div>
                <form action="/goodbye" method="POST" class="col-md-1">
